#!/bin/bash -x
rootd="${1:-/}"
set -ex

. /root/config/chroot

LANG=C

_xchroot() {
   # Prevent multiple chroots
   if [ "$1" = "/" ]; then
      shift;
      "$@"
   else
      chroot "$@"
   fi
}

echo FOOBAR
DEBIAN_FRONTEND=noninteractive _xchroot "${rootd}" apt-get --purge remove --assume-yes flash-kernel
echo FOOBAR
